<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sanskrittutoring.MainActivity"
    android:background="#5C6BC0">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="168dp"
        android:layout_height="215dp"
        app:srcCompat="@drawable/numbers"
        android:scaleType="centerInside"
        android:background="@android:color/holo_red_light"
        app:layout_editor_absoluteY="16dp"
        app:layout_editor_absoluteX="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="163dp"
        android:layout_height="214dp"
        app:srcCompat="@drawable/family2"
        app:layout_editor_absoluteX="205dp"
        android:scaleType="centerInside"
        android:background="@android:color/holo_blue_bright"
        app:layout_editor_absoluteY="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="21dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="8dp" />


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="168dp"
        android:layout_height="246dp"
        app:srcCompat="@drawable/colors1"
        android:scaleType="centerCrop"
        android:background="@android:color/holo_orange_light"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_editor_absoluteY="255dp"
        app:layout_editor_absoluteX="17dp"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="158dp"
        android:layout_height="254dp"
        app:srcCompat="@drawable/phrases"
        android:scaleType="centerInside"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:layout_constraintLeft_toRightOf="@+id/imageButton3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.515" />

</android.support.constraint.ConstraintLayout>
